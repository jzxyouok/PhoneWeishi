<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_margin="0dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="5dip"
    android:layout_width="match_parent" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_title"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:text="10086"
        android:textStyle="bold"/>
    <TextView
        android:layout_toRightOf="@+id/recycle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_count"
        android:text="2"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_below="@+id/recycle_title"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_content"
        android:text="挺好好的发生口角哈健康的哈健康。"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_alignTop="@+id/recycle_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flag"
            android:text="智能拦截"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:id="@+id/recycle_time"
            android:text="7月20号"/>
    </LinearLayout>

</RelativeLayout>
</android.support.v7.widget.CardView>